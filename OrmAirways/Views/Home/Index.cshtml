@model OrmAirways.Models.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2 text-secondary">Visão Geral</h1>
    
</div>

<div class="row g-4 mb-4">
    <div class="col-12 col-sm-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <h6 class="text-muted mb-1">Passageiros</h6>
                    <h3 class="fw-bold mb-0 text-dark">@Model.TotalCustomers</h3>
                </div>
                <div class="rounded-circle bg-primary bg-opacity-10 p-3 text-primary">
                    <i class="fas fa-users fa-2x"></i>
                </div>
            </div>
            <div class="card-footer bg-white border-0 py-2">
                <small class="text-success fw-bold"><i class="fas fa-arrow-up"></i> Ativos na base</small>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <h6 class="text-muted mb-1">Reservas Feitas</h6>
                    <h3 class="fw-bold mb-0 text-dark">@Model.TotalBookings</h3>
                </div>
                <div class="rounded-circle bg-success bg-opacity-10 p-3 text-success">
                    <i class="fas fa-ticket-alt fa-2x"></i>
                </div>
            </div>
            <div class="card-footer bg-white border-0 py-2">
                <small class="text-muted">Total acumulado</small>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <h6 class="text-muted mb-1">Frota Aérea</h6>
                    <h3 class="fw-bold mb-0 text-dark">@Model.TotalAircrafts</h3>
                </div>
                <div class="rounded-circle bg-warning bg-opacity-10 p-3 text-warning">
                    <i class="fas fa-plane fa-2x"></i>
                </div>
            </div>
            <div class="card-footer bg-white border-0 py-2">
                <small class="text-muted">Aeronaves operacionais</small>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <h6 class="text-muted mb-1">Aeroportos</h6>
                    <h3 class="fw-bold mb-0 text-dark">@Model.TotalAirports</h3>
                </div>
                <div class="rounded-circle bg-info bg-opacity-10 p-3 text-info">
                    <i class="fas fa-building fa-2x"></i>
                </div>
            </div>
            <div class="card-footer bg-white border-0 py-2">
                <small class="text-muted">Destinos disponíveis</small>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0 text-secondary"><i class="fas fa-calendar-alt me-2"></i>Próximos Voos Programados</h5>
                <a asp-controller="Flight" asp-action="Create" class="btn btn-sm btn-warning text-white fw-bold">Novo Voo</a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Voo</th>
                                <th>Origem</th>
                                <th>Destino</th>
                                <th>Partida</th>
                                <th>Aeronave</th>
                                <th class="text-end pe-4">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.UpcomingFlights.Any())
                            {
                                @foreach (var flight in Model.UpcomingFlights)
                                {
                                    <tr>
                                        <td class="ps-4 fw-bold text-primary">@flight.FlightNumber</td>
                                        <td>@flight.Origin?.IataCode</td>
                                        <td>@flight.Destination?.IataCode</td>
                                        <td>@flight.DepartureTime.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@flight.Aircraft?.Model</td>
                                        <td class="text-end pe-4">
                                            <span class="badge bg-success rounded-pill">Programado</span>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center py-4 text-muted">
                                        Nenhum voo programado para os próximos dias.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>