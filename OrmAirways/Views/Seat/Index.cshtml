@model IEnumerable<OrmAirways.Models.Seat>

@{
    ViewData["Title"] = "Mapa de Assentos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-secondary">
        <i class="fas fa-chair me-2"></i>Configuração de Assentos
    </h2>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body bg-light">
        <form method="get" asp-action="Index" class="row align-items-end">
            <div class="col-md-4">
                <label class="form-label fw-bold">Selecione a Aeronave:</label>
                <select name="aircraftId" class="form-select" asp-items="ViewBag.Aircrafts" onchange="this.form.submit()">
                    <option value="">-- Escolha uma aeronave para gerenciar --</option>
                </select>
            </div>
            <div class="col-md-8">
                <div class="text-muted small mt-2">
                    <i class="fas fa-info-circle me-1"></i>
                    Selecione uma aeronave para visualizar e editar a configuração (Classe Executiva/Econômica) de seus assentos.
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Código</th>
                            <th>Classe Atual</th>
                            <th class="text-end pe-4">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">
                                    <i class="fas fa-couch text-secondary me-2"></i>@item.Code
                                </td>
                                <td>
                                    @if (item.ClassType == "Business")
                                    {
                                        <span class="badge bg-primary">Executiva</span>
                                    }
                                    else if (item.ClassType == "First")
                                    {
                                        <span class="badge bg-primary">Primeira Classe</span>
                                    }
                                    else if(item.ClassType == "Blocked")
                                    {
                                        <span class="badge bg-danger">Em manutenção</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-secondary border">Econômica</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Alterar Classe">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else if (ViewBag.SelectedAircraftId != null)
{
    <div class="alert alert-warning">
        Esta aeronave não possui assentos cadastrados ou houve um erro na geração automática.
    </div>
}