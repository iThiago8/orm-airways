@model OrmAirways.Models.Seat

@{
    ViewData["Title"] = "Editar Assento";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow border-0">
            <div class="card-header bg-secondary text-white py-3">
                <h5 class="mb-0"><i class="fas fa-chair me-2"></i>Editar Assento</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Update">
                    <input type="hidden" asp-for="Id" />
                    <!-- Enviamos o AircraftId oculto para manter a referência se necessário -->
                    <input type="hidden" asp-for="AircraftId" />

                    <div class="mb-3 text-center">
                        <h2 class="display-6 fw-bold text-dark">@Model.Code</h2>
                        <p class="text-muted">@Model.Aircraft?.RegistrationNumber</p>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Code" class="form-label fw-bold">Código do Assento</label>
                        <input asp-for="Code" class="form-control" />
                        <div class="form-text">Ex: 1A, 12F. Cuidado ao alterar para não duplicar.</div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ClassType" class="form-label fw-bold">Classe de Serviço</label>
                        <select asp-for="ClassType" class="form-select">
                            <option value="Economy">Econômica</option>
                            <option value="Business">Executiva / Business</option>
                            <option value="First">Primeira Classe</option>
                            <option value="Blocked">Bloqueado / Manutenção</option>
                        </select>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary fw-bold">
                            <i class="fas fa-check me-2"></i>Salvar
                        </button>
                        <a asp-action="Index" asp-route-aircraftId="@Model.AircraftId" class="btn btn-light text-secondary border">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>

        <div class="text-end mt-3">
            <form asp-action="Delete" method="post" onsubmit="return confirm('Tem certeza? Isso pode quebrar histórico de voos.');">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-link text-danger btn-sm text-decoration-none">
                    <i class="fas fa-trash me-1"></i> Excluir este assento (Perigo)
                </button>
            </form>
        </div>
    </div>
</div>