@model ICollection<OrmAirways.Models.Aircraft>

    @{
        ViewData["Title"] = "New Aircraft";
    }


<div class="text-center">
    <h1 class="display-4">
        Total de Aeronaves: @Model.Count
    </h1>

    <a asp-controller="Aircraft" asp-action="Create">Novo</a>
    <table class="table table-responsive table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Model</th>
                <th>NumberSeats</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.ID</td>
                    <td>@a.Model</td>
                    <td>@a.SeatNumber</td>
                    <td>
                            <a asp-controller="Aircraft" asp-action="Update"
                               asp-route-id="@a.ID">
                                ✏️
                            </a>
                        </td>
                        <td>
                            <form asp-controller="Aircraft" asp-action="Delete"
                                  method="post">
                                <input type="hidden" name="id" value="@a.ID" />
                                <button type="submit"
                                        class="btn btn-danger btn-sm">
                                    🗑️
                                </button>
                            </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>