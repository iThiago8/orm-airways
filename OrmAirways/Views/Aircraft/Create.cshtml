@model OrmAirways.Models.Aircraft

@{
    ViewData["Title"] = "Nova Aeronave";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow border-0">
            <div class="card-header bg-dark text-white py-3">
                <h5 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Cadastrar Aeronave</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="RegistrationNumber" class="form-label fw-bold">Matrícula</label>
                            <input asp-for="RegistrationNumber" class="form-control" placeholder="Ex: PT-OGX" />
                            <span asp-validation-for="RegistrationNumber" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Model" class="form-label fw-bold">Modelo</label>
                            <input asp-for="Model" class="form-control" placeholder="Ex: Airbus A320" />
                            <span asp-validation-for="Model" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Capacity" class="form-label fw-bold">Capacidade</label>
                        <input asp-for="Capacity" class="form-control" type="number" min="1" placeholder="Ex: 170" />
                        <div class="form-text text-muted">
                            Assentos serão gerados automaticamente.
                        </div>
                        <span asp-validation-for="Capacity" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning text-white fw-bold">
                            <i class="fas fa-save me-2"></i>Salvar
                        </button>
                        <a asp-action="Index" class="btn btn-light text-secondary border">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}