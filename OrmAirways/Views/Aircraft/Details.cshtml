@model OrmAirways.Models.Aircraft

@{
    ViewData["Title"] = "Detalhes da Aeronave";
}

<div class="container py-4">
    <div class="card shadow border-0">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h4 class="mb-0 text-secondary">
                <i class="fas fa-plane me-2"></i>@Model.RegistrationNumber
            </h4>
            <span class="badge bg-dark">@Model.Model</span>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="p-3 bg-light rounded text-center">
                        <h6 class="text-muted">Capacidade Total</h6>
                        <h2 class="fw-bold text-primary">@Model.Capacity</h2>
                        <small>Assentos</small>
                    </div>
                </div>
                <div class="col-md-8">
                    <h5 class="border-bottom pb-2">Informações Técnicas</h5>
                    <div class="row mt-3">
                        <div class="col-6 mb-3">
                            <strong class="d-block text-muted small">ID do Sistema</strong>
                            <span>@Model.Id</span>
                        </div>
                        <div class="col-6 mb-3">
                            <strong class="d-block text-muted small">Status</strong>
                            <span class="text-success"><i class="fas fa-check-circle me-1"></i>Operacional</span>
                        </div>
                        <div class="col-6 mb-3">
                            <strong class="d-block text-muted small">Data de Registro</strong>
                            <span>@Model.CreatedAt.ToString("dd/MM/yyyy")</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end border-top pt-3">
                <a asp-action="Index" class="btn btn-light border me-2">Voltar</a>
                <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary px-4">Editar</a>
            </div>
        </div>
    </div>
</div>