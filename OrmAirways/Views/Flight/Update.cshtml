@model OrmAirways.Models.Flight

@{
    ViewData["Title"] = "Editar Voo";
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="card shadow border-0">
            <div class="card-header bg-secondary text-white py-3">
                <h5 class="mb-0"><i class="fas fa-edit me-2"></i>Editar Voo @Model.FlightNumber</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Update">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3 bg-light p-3 rounded"></div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="FlightNumber" class="form-label fw-bold">Número do Voo</label>
                            <input asp-for="FlightNumber" class="form-control" />
                            <span asp-validation-for="FlightNumber" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="BasePrice" class="form-label fw-bold">Preço Base (R$)</label>
                            <div class="input-group">
                                <span class="input-group-text">R$</span>
                                <input asp-for="BasePrice" class="form-control" type="number" step="0.01" />
                            </div>
                            <span asp-validation-for="BasePrice" class="text-danger small"></span>
                        </div>
                    </div>

                    <h6 class="text-primary border-bottom pb-2 mb-3 mt-4">Definição de Rota</h6>
                    <div class="row mb-3 bg-light p-3 rounded gx-3 align-items-start">
                        <div class="col-md-5">
                            <label asp-for="OriginId" class="form-label fw-bold"><i class="fas fa-plane-departure me-1"></i> Origem</label>
                            <select asp-for="OriginId" class="form-select" asp-items="ViewBag.OriginId"></select>
                            <span asp-validation-for="OriginId" class="text-danger small"></span>
                        </div>
                        <div class="col-md-2 text-center align-self-center py-3 py-md-0">
                            <i class="fas fa-arrow-right fa-2x text-muted"></i>
                        </div>
                        <div class="col-md-5">
                            <label asp-for="DestinationId" class="form-label fw-bold"><i class="fas fa-plane-arrival me-1"></i> Destino</label>
                            <select asp-for="DestinationId" class="form-select" asp-items="ViewBag.DestinationId"></select>
                            <span asp-validation-for="DestinationId" class="text-danger small"></span>
                        </div>
                    </div>

                    <h6 class="text-primary border-bottom pb-2 mb-3 mt-4">Horários e Logística</h6>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="DepartureTime" class="form-label fw-bold">Data/Hora Partida</label>
                            <input asp-for="DepartureTime" class="form-control" type="datetime-local" />
                            <span asp-validation-for="DepartureTime" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ArrivalTime" class="form-label fw-bold">Data/Hora Chegada Prevista</label>
                            <input asp-for="ArrivalTime" class="form-control" type="datetime-local" />
                            <span asp-validation-for="ArrivalTime" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="mb-4">
                        <label asp-for="AircraftId" class="form-label fw-bold"><i class="fas fa-plane me-1"></i> Aeronave Alocada</label>
                        <select asp-for="AircraftId" class="form-select" asp-items="ViewBag.AircraftId"></select>
                        <span asp-validation-for="AircraftId" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary fw-bold">
                            <i class="fas fa-check me-2"></i>Salvar Alterações
                        </button>
                        <a asp-action="Index" class="btn btn-light text-secondary border">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}