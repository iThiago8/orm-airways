@model OrmAirways.Models.Flight

@{
    ViewData["Title"] = "Detalhes do Voo";
}

<div class="container py-4">
    <div class="card shadow border-0 mb-4">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h4 class="mb-0 text-secondary">
                <i class="fas fa-calendar-check me-2"></i>Voo @Model.FlightNumber
            </h4>
            <span class="badge bg-success fs-6">Programado</span>
        </div>
        <div class="card-body">
            <div class="row text-center mb-5 align-items-center bg-light py-4 rounded mx-0">
                <div class="col-5">
                    <h2 class="fw-bold text-primary mb-0">@Model.Origin?.IataCode</h2>
                    <p class="text-muted mb-0">@Model.Origin?.Name</p>
                    <small>@Model.Origin?.Location?.City, @Model.Origin?.Location?.Country</small>
                </div>
                <div class="col-2">
                    <i class="fas fa-plane fa-3x text-warning plane-icon-rotate"></i>
                </div>
                <div class="col-5">
                    <h2 class="fw-bold text-primary mb-0">@Model.Destination?.IataCode</h2>
                    <p class="text-muted mb-0">@Model.Destination?.Name</p>
                    <small>@Model.Destination?.Location?.City, @Model.Destination?.Location?.Country</small>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <h5 class="border-bottom pb-2 text-primary">Horários</h5>
                    <div class="mt-3 ps-3 border-start border-3 border-warning">
                        <p class="mb-3">
                            <strong>Partida:</strong><br />
                            <span class="fs-5">@Model.DepartureTime.ToString("dd/MM/yyyy") às @Model.DepartureTime.ToString("HH:mm")</span>
                        </p>
                        <p class="mb-0">
                            <strong>Chegada Prevista:</strong><br />
                            <span class="fs-5">@Model.ArrivalTime.ToString("dd/MM/yyyy") às @Model.ArrivalTime.ToString("HH:mm")</span>
                        </p>
                    </div>
                </div>
                <div class="col-md-6 mt-4 mt-md-0">
                    <h5 class="border-bottom pb-2 text-primary">Recursos e Pricing</h5>
                    <div class="mt-3">
                        <p class="mb-2"><strong>Aeronave:</strong> @Model.Aircraft?.Model (@Model.Aircraft?.RegistrationNumber)</p>
                        <p class="mb-2"><strong>Capacidade:</strong> @Model.Aircraft?.Capacity Assentos</p>
                        <div class="alert alert-light border d-inline-block mt-2">
                            <strong>Preço Base:</strong> <span class="text-success fw-bold">R$ @Model.BasePrice.ToString("N2")</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end border-top pt-3">
                <a asp-action="Index" class="btn btn-light border me-2">Voltar</a>
                <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary px-4">Editar Programação</a>
            </div>
        </div>
    </div>
</div>

<style>
    .plane-icon-rotate {
        transform: rotate(90deg);
    }
</style>