<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OrmAirways</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OrmAirways.styles.css" asp-append-version="true" />
</head>
<body>

    <button class="mobile-toggle-btn" id="menu-toggle">
        <i class="fas fa-bars"></i>
    </button>

    <nav class="sidebar-wrapper">
        <div class="sidebar-brand">
            <i class="fas fa-plane-departure me-2"></i>
            Orm<span>Airways</span>
        </div>

        <ul class="sidebar-menu">
            <li>
                <a asp-controller="Home" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
                    <i class="fas fa-tachometer-alt"></i> @(User.IsInRole("Admin") ? "Visão Geral" : "Minhas Viagens")
                </a>
            </li>

            @if (User.IsInRole("Admin"))
            {
                <li class="my-3 mx-4 border-top border-secondary opacity-25"></li>
                <li class="px-4 py-2 text-uppercase smaller fw-bold" style="font-size: 0.75rem; color: #b2bec3; opacity: 0.8;">Comercial</li>

                <li>
                    <a asp-controller="Flight" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Flight" ? "active" : "")">
                        <i class="fas fa-calendar-check"></i> Gerenciar Voos
                    </a>
                </li>
                <li>
                    <a asp-controller="Booking" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Booking" ? "active" : "")">
                        <i class="fas fa-ticket-alt"></i> Todas as Reservas
                    </a>
                </li>
                <li>
                    <a asp-controller="Customer" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Customer" ? "active" : "")">
                        <i class="fas fa-user-tie"></i> Clientes
                    </a>
                </li>

                <li class="my-3 mx-4 border-top border-secondary opacity-25"></li>
                <li class="px-4 py-2 text-uppercase smaller fw-bold" style="font-size: 0.75rem; color: #b2bec3; opacity: 0.8;">Logística</li>

                <li>
                    <a asp-controller="Aircraft" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Aircraft" ? "active" : "")">
                        <i class="fas fa-plane"></i> Frota Aérea
                    </a>
                </li>
                <li>
                    <a asp-controller="Airport" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Airport" ? "active" : "")">
                        <i class="fas fa-building"></i> Aeroportos
                    </a>
                </li>
                <li>
                    <a asp-controller="Seat" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Seat" ? "active" : "")">
                        <i class="fas fa-chair"></i> Mapa de Assentos
                    </a>
                </li>
            }
            else
            {
                <li class="my-3 mx-4 border-top border-secondary opacity-25"></li>
                <li class="px-4 py-2 text-uppercase smaller fw-bold" style="font-size: 0.75rem; color: #b2bec3; opacity: 0.8;">Área do Cliente</li>

                <li>
                    <a asp-controller="Booking" asp-action="Create" class="sidebar-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Create" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Booking" ? "active" : "")">
                        <i class="fas fa-shopping-cart"></i> Comprar Passagem
                    </a>
                </li>
                <li>
                    <a asp-controller="Booking" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Booking" ? "active" : "")">
                        <i class="fas fa-history"></i> Histórico de Reservas
                    </a>
                </li>
            }
        </ul>

        <div class="mt-auto p-3">
            <partial name="_LoginPartial" />
        </div>
    </nav>

    <div class="page-content-wrapper">
        <main role="main" class="main-container-fluid">
            @RenderBody()
        </main>

        <footer class="footer-custom text-center">
            <div class="container-fluid">
                &copy; @DateTime.Now.Year - <strong>OrmAirways</strong> - Sistema de Gestão Aérea
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.getElementById("menu-toggle").addEventListener("click", function (e) {
            e.preventDefault();
            document.body.classList.toggle("toggled");
        });
        document.querySelector('.page-content-wrapper').addEventListener('click', function() {
            if (document.body.classList.contains('toggled') && window.innerWidth <= 768) {
                 document.body.classList.remove("toggled");
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>