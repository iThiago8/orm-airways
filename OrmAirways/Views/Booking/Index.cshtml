@model IEnumerable<OrmAirways.Models.Booking>

@{
    ViewData["Title"] = "Reservas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-secondary">
        <i class="fas fa-ticket-alt me-2"></i>Gestão de Reservas
    </h2>
    <a asp-action="Create" class="btn btn-dark">
        <i class="fas fa-plus me-1"></i> Nova Venda
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Ticket</th>
                        <th>Passageiro</th>
                        <th>Voo / Rota</th>
                        <th>Assento</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold font-monospace text-primary">@item.TicketCode</td>
                            <td>
                                <div class="fw-bold">@item.Customer?.FullName</div>
                                <small class="text-muted">@item.Customer?.DocumentNumber</small>
                            </td>
                            <td>
                                <div>@item.Flight?.FlightNumber</div>
                                <small class="text-muted">@item.Flight?.Origin?.IataCode > @item.Flight?.Destination?.IataCode</small>
                            </td>
                            <td>
                                <span class="badge bg-light text-dark border px-3">@item.Seat?.Code</span>
                            </td>
                            <td>
                                @if (item.IsConfirmed)
                                {
                                    <span class="badge bg-success bg-opacity-75">Confirmado</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Pendente</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1">
                                    <i class="fas fa-print"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Cancelar esta reserva?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>