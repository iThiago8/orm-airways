@model OrmAirways.Models.Customer

@{
    ViewData["Title"] = "Ficha do Cliente";
}

<div class="container py-4">
    <div class="card shadow border-0">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h4 class="mb-0 text-secondary">
                <i class="fas fa-user-circle me-2"></i>@Model.FullName
            </h4>
            @if (Model.IsPriority)
            {
                <span class="badge bg-warning text-dark fs-6"><i class="fas fa-crown me-1"></i>VIP MEMBER</span>
            }
            else
            {
                <span class="badge bg-light text-secondary border fs-6">Standard</span>
            }
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5 class="border-bottom pb-2 text-primary">Dados Pessoais</h5>
                    <div class="mt-3">
                        <p class="mb-2"><strong>CPF:</strong> @Model.DocumentNumber</p>
                        <p class="mb-2"><strong>Telefone:</strong> @Model.Phone</p>
                        <p class="mb-2"><strong>E-mail:</strong> <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a></p>
                    </div>
                </div>
                <div class="col-md-6">
                    <h5 class="border-bottom pb-2 text-primary">Estatísticas do Sistema</h5>
                    <div class="mt-3">
                        <p class="mb-2"><strong>ID Interno:</strong> <span class="text-muted small">@Model.Id</span></p>
                        <p class="mb-2"><strong>Data de Registro:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy")</p>

                        <div class="card bg-light border-0 mt-3">
                            <div class="card-body py-2 px-3">
                                <small class="text-muted fw-bold text-uppercase">Status da Conta</small>
                                <div class="d-flex align-items-center mt-1 text-success">
                                    <i class="fas fa-check-circle me-2"></i> Ativa e Verificada
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end border-top pt-3">
                <a asp-action="Index" class="btn btn-light border me-2">Voltar</a>
                <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary px-4">Editar</a>
            </div>
        </div>
    </div>
</div>